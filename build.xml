<?xml version="1.0" encoding="UTF-8"?>
<project basedir="." default="build">
	<path id="build.classpath">
		<pathelement location="classes"/>
	</path>
	<target name="init">
		<mkdir dir="classes"/>
	</target>
	<target name="clean">
		<delete dir="classes"/>
	</target>
	<target depends="init" name="build">
		<javac srcdir="." destdir="classes" source="1.5" target="1.5" fork="yes">
			<classpath refid="build.classpath"/>
			<include name="Mapping.java"/>
			<include name="Company.java"/>
			<include name="Employee.java"/>
			<include name="Package.java"/>
			<include name="Courier.java"/>
			<include name="Customers.java"/>
			<include name="Reports.java"/>
			<include name="Admin.java"/>
			<include name="Ticket.java"/>
			<include name="OrderTaker.java"/>
		</javac>
	</target>
</project>